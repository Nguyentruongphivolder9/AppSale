<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.appsale">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="AppSale"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppSale">
        <activity
            android:name=".presentation.views.splash.SplashActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.views.home.HomeActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.views.authentications.sign_up.SignUpActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.views.authentications.sign_in.SignInActivity"
            android:exported="false">

        </activity>
    </application>

</manifest>
